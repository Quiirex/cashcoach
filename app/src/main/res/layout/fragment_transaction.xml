<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="transactionVM"
            type="com.tva.cashcoach.modules.transaction.data.viewmodel.TransactionVM" />
    </data>

    <LinearLayout
        android:gravity="start"
        android:id="@+id/linearTransaction"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/groupStylewhite_A700">

        <LinearLayout
            android:gravity="start"
            android:id="@+id/linearColumnmenu"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarToolbar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:contentInsetStart="0dp"
                style="@style/groupStylewhite_A700">

                <LinearLayout
                    android:id="@+id/linearRowmenu"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12pxv"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinnerDropdownMonth"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.71"
                        android:layout_width="0dp"
                        tools:listitem="@layout/spinner_item" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:ellipsize="end"
                        android:gravity="center"
                        android:id="@+id/btnMenu"
                        android:layout_height="@dimen/_40pxh"
                        android:layout_marginStart="@dimen/_207pxh"
                        android:layout_width="@dimen/_40pxh"
                        android:paddingHorizontal="@dimen/_8pxh"
                        android:paddingVertical="@dimen/_8pxv"
                        android:singleLine="true"
                        android:textAllCaps="false"
                        style="@style/btnRoundedOutline" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

            <FrameLayout
                android:id="@+id/frameBars"
                android:layout_height="@dimen/_48pxv"
                android:layout_width="match_parent"
                style="@style/groupStylewhite_A700">

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/txtYesterday"
                    android:layout_gravity="bottom|start"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{transactionVM.transactionModel.txtYesterday}"
                    style="@style/txtIntersemibold18_1"
                    tools:text="@string/lbl_today" />

                <TextView
                    android:ellipsize="end"
                    android:gravity="top|start"
                    android:id="@+id/txtBars"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_10pxv"
                    android:paddingStart="@dimen/_16pxh"
                    android:paddingTop="@dimen/_15pxv"
                    android:singleLine="true"
                    android:text="@{transactionVM.transactionModel.txtBars}"
                    style="@style/txtSolid"
                    tools:text="@string/lbl_today" />
            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:gravity="center_horizontal"
                android:id="@+id/recyclerListtrash"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_19pxh"
                android:layout_marginStart="@dimen/_19pxh"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                itemSpace="@{@dimen/_8pxh}"
                tools:itemCount="3"
                tools:listitem="@layout/row_listtrash" />

            <TextView
                android:ellipsize="end"
                android:id="@+id/txtBarsOne"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_10pxv"
                android:paddingStart="@dimen/_16pxh"
                android:paddingTop="@dimen/_15pxv"
                android:singleLine="true"
                android:text="@{transactionVM.transactionModel.txtBarsOne}"
                style="@style/txtSolid"
                tools:text="@string/lbl_yesterday" />

            <androidx.recyclerview.widget.RecyclerView
                android:gravity="center_horizontal"
                android:id="@+id/recyclerListquestion"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_19pxh"
                android:layout_marginStart="@dimen/_19pxh"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                itemSpace="@{@dimen/_8pxh}"
                tools:itemCount="2"
                tools:listitem="@layout/row_listquestion" />
        </LinearLayout>
    </LinearLayout>
</layout>
