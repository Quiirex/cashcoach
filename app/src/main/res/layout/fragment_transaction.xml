<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="transactionVM"
            type="com.tva.cashcoach.modules.transaction.data.viewmodel.TransactionVM" />
    </data>

    <LinearLayout
        android:gravity="start"
        android:id="@+id/linearTransaction"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/groupStylewhite_A700">

        <LinearLayout
            android:gravity="start"
            android:id="@+id/linearColumnmenu"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarToolbar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:contentInsetStart="0dp"
                style="@style/groupStylewhite_A700">

                <LinearLayout
                    android:id="@+id/linearRowmenu"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12pxv"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center"
                        android:id="@+id/txtTitle"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="Transactions"
                        style="@style/txtIntersemibold18_2"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

            <FrameLayout
                android:id="@+id/frameBars"
                android:layout_height="@dimen/_48pxv"
                android:layout_width="match_parent"
                style="@style/groupStylewhite_A700">

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/txtToday"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_10pxv"
                    android:paddingStart="@dimen/_16pxh"
                    android:paddingTop="@dimen/_15pxv"
                    android:singleLine="true"
                    android:text="@{transactionVM.transactionModel.txtToday}"
                    style="@style/txtSolid"
                    tools:text="@string/lbl_today" />
            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:gravity="center_horizontal"
                android:id="@+id/recyclerListtrash"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_19pxh"
                android:layout_marginStart="@dimen/_19pxh"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                itemSpace="@{@dimen/_8pxh}"
                tools:itemCount="3"
                tools:listitem="@layout/row_transaction" />

            <TextView
                android:ellipsize="end"
                android:id="@+id/txtYesterday"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_10pxv"
                android:paddingStart="@dimen/_16pxh"
                android:paddingTop="@dimen/_15pxv"
                android:singleLine="true"
                android:text="@{transactionVM.transactionModel.txtYesterday}"
                style="@style/txtSolid"
                tools:text="@string/lbl_yesterday" />

            <androidx.recyclerview.widget.RecyclerView
                android:gravity="center_horizontal"
                android:id="@+id/recyclerListquestion"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_19pxh"
                android:layout_marginStart="@dimen/_19pxh"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                itemSpace="@{@dimen/_8pxh}"
                tools:itemCount="2"
                tools:listitem="@layout/row_transaction" />
        </LinearLayout>
    </LinearLayout>
</layout>
