<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="homeScreenVM"
            type="com.tva.cashcoach.modules.homescreen.data.viewmodel.HomeScreenVM" />
    </data>

    <FrameLayout
        android:id="@+id/frameHomescreen"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        style="@style/groupStylewhite_A700">

        <LinearLayout
            android:id="@+id/linearColumnavatar"
            android:layout_gravity="top|start"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:gravity="center_horizontal"
                android:id="@+id/toolbarToolbar"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_14pxh"
                android:layout_marginStart="@dimen/_14pxh"
                android:layout_width="match_parent"
                app:contentInsetStart="0dp">

                <LinearLayout
                    android:id="@+id/linearRowavatar"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageAvatar"
                        android:layout_height="@dimen/_32pxh"
                        android:layout_marginBottom="@dimen/_4pxv"
                        android:layout_marginTop="@dimen/_4pxv"
                        android:layout_width="@dimen/_32pxh"
                        android:scaleType="centerCrop"
                        circular="@{true}"
                        imageRes="@{@drawable/img_avatar}"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_avatar" />

                    <Spinner
                        android:id="@+id/spinnerDropdownMonth"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_186pxh"
                        android:layout_weight="0.77"
                        android:layout_width="0dp"
                        tools:listitem="@layout/spinner_item" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:ellipsize="end"
                android:id="@+id/txtCurrentBudget"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_14pxh"
                android:layout_marginStart="@dimen/_14pxh"
                android:layout_marginTop="@dimen/_13pxv"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{homeScreenVM.homeScreenModel.txtCurrentBudget}"
                style="@style/txtIntermedium14"
                tools:text="@string/lbl_current_budget" />

            <TextView
                android:ellipsize="end"
                android:id="@+id/txtPrice"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_14pxh"
                android:layout_marginStart="@dimen/_14pxh"
                android:layout_marginTop="@dimen/_7pxv"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{homeScreenVM.homeScreenModel.txtPrice}"
                style="@style/txtIntersemibold40"
                tools:text="" />

            <androidx.recyclerview.widget.RecyclerView
                android:gravity="center_horizontal"
                android:id="@+id/recyclerListeye"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_14pxh"
                android:layout_marginStart="@dimen/_14pxh"
                android:layout_marginTop="@dimen/_25pxv"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                itemSpace="@{@dimen/_16pxh}"
                tools:itemCount="2"
                tools:listitem="@layout/row_listeye" />

            <LinearLayout
                android:gravity="start"
                android:id="@+id/linearTabs"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_14pxh"
                android:layout_marginStart="@dimen/_14pxh"
                android:layout_marginTop="@dimen/_32pxv"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                style="@style/groupStylecornerRadius">

                <androidx.appcompat.widget.AppCompatButton
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/btnToday"
                    android:layout_height="@dimen/_34pxv"
                    android:layout_width="@dimen/_90pxh"
                    android:lineSpacingExtra="@dimen/_3pxh"
                    android:paddingBottom="@dimen/_8pxv"
                    android:paddingEnd="@dimen/_24pxh"
                    android:paddingStart="@dimen/_24pxh"
                    android:paddingTop="@dimen/_8pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_today"
                    android:textAllCaps="false"
                    style="@style/btnSolidRounded"
                    tools:text="@string/lbl_today" />

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/txtWeek"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8pxv"
                    android:layout_marginStart="@dimen/_24pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_weight="0.19"
                    android:layout_width="0dp"
                    android:lineSpacingExtra="@dimen/_3pxh"
                    android:singleLine="true"
                    android:text="@{homeScreenVM.homeScreenModel.txtWeek}"
                    style="@style/txtIntermedium14"
                    tools:text="@string/lbl_week" />

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/txtMonth"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8pxv"
                    android:layout_marginStart="@dimen/_48pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_weight="0.22"
                    android:layout_width="0dp"
                    android:lineSpacingExtra="@dimen/_3pxh"
                    android:singleLine="true"
                    android:text="@{homeScreenVM.homeScreenModel.txtMonth}"
                    style="@style/txtIntermedium14"
                    tools:text="@string/lbl_month" />

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:id="@+id/linearColumnyear"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8pxv"
                    android:layout_marginEnd="@dimen/_24pxh"
                    android:layout_marginStart="@dimen/_48pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_weight="0.15"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    style="@style/groupStylecornerRadius_1">

                    <TextView
                        android:ellipsize="end"
                        android:gravity="start"
                        android:id="@+id/txtYear"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:singleLine="true"
                        android:text="@{homeScreenVM.homeScreenModel.txtYear}"
                        style="@style/txtIntermedium14"
                        tools:text="@string/lbl_year" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearRowspendfrequency"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8pxv"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                style="@style/groupStylewhite_A700">

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/txtSpendFrequency"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_16pxv"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_17pxv"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:text="@{homeScreenVM.homeScreenModel.txtSpendFrequency}"
                    style="@style/txtIntersemibold18"
                    tools:text="@string/msg_recent_transact" />

                <androidx.appcompat.widget.AppCompatButton
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/btnSeeAll"
                    android:layout_height="@dimen/_32pxv"
                    android:layout_marginBottom="@dimen/_12pxv"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_85pxh"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_width="@dimen/_78pxh"
                    android:lineSpacingExtra="@dimen/_3pxh"
                    android:paddingBottom="@dimen/_7pxv"
                    android:paddingEnd="@dimen/_16pxh"
                    android:paddingStart="@dimen/_16pxh"
                    android:paddingTop="@dimen/_7pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_see_all"
                    android:textAllCaps="false"
                    style="@style/btnSolidRounded_1"
                    tools:text="@string/lbl_see_all" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:gravity="center_horizontal"
                android:id="@+id/recyclerListframefive"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_14pxh"
                android:layout_marginStart="@dimen/_14pxh"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                itemSpace="@{@dimen/_8pxh}"
                tools:itemCount="3"
                tools:listitem="@layout/row_listframefive" />
        </LinearLayout>
    </FrameLayout>
</layout>
