<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="financialReportLineChartVM"
            type="com.tva.cashcoach.modules.financialreport.data.viewmodel.FinancialReportVM" />
    </data>

    <LinearLayout
        android:id="@+id/linearColumnarrowleft"
        style="@style/groupStylewhite_A700"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearTopNavigation"
            style="@style/groupStylewhite_A700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20pxh"
                android:layout_marginTop="@dimen/_22pxv"
                android:layout_marginEnd="@dimen/_20pxh"
                android:layout_marginBottom="@dimen/_19pxv"
                android:gravity="start"
                app:contentInsetStart="0dp">

                <LinearLayout
                    android:id="@+id/linearRowarrowleft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageBack"
                        android:layout_width="@dimen/_24pxh"
                        android:layout_height="@dimen/_16pxh"
                        android:layout_marginTop="@dimen/_5pxv"
                        android:layout_marginBottom="@dimen/_4pxv"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_arrowleft"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_arrowleft" />

                    <TextView
                        android:id="@+id/txtTitle"
                        style="@style/txtIntersemibold18_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginEnd="@dimen/_35pxh"
                        android:layout_weight="0.85"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@{financialReportLineChartVM.financialReportModel.txtTitle}"
                        tools:text="@string/msg_financial_repor" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearFinancialRepor"
            style="@style/groupStylewhite_A700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearFinancialRepor1"
                style="@style/groupStylewhite_A700"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical"
                tools:ignore="MissingClass">


                <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                    android:id="@+id/chartView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_300pxv" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dateFilters"
                style="@style/groupStylewhite_A700"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical"
                tools:ignore="MissingClass">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/startDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/_8pxh"
                        android:layout_marginStart="@dimen/_16pxh"
                        android:layout_marginTop="@dimen/_24pxv"
                        android:hint="@string/lbl_start_date"
                        android:inputType="date"
                        android:lineSpacingExtra="@dimen/_4pxh"
                        android:paddingBottom="@dimen/_17pxv"
                        android:paddingEnd="@dimen/_8pxh"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_18pxv"
                        android:singleLine="true"
                        android:textColorHint="@color/gray_500"
                        android:textColor="@color/black"
                        android:background="@drawable/rectangle_bg_white_a700_border_gray_100_radius_17"
                        style="@style/etSolidRoundedOutline_1" />

                    <EditText
                        android:id="@+id/endDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/_16pxh"
                        android:layout_marginStart="@dimen/_8pxh"
                        android:layout_marginTop="@dimen/_24pxv"
                        android:hint="@string/lbl_end_date"
                        android:inputType="date"
                        android:lineSpacingExtra="@dimen/_4pxh"
                        android:paddingBottom="@dimen/_17pxv"
                        android:paddingEnd="@dimen/_16pxh"
                        android:paddingStart="@dimen/_8pxh"
                        android:paddingTop="@dimen/_18pxv"
                        android:singleLine="true"
                        android:textColorHint="@color/gray_500"
                        android:textColor="@color/black"
                        android:background="@drawable/rectangle_bg_white_a700_border_gray_100_radius_17"
                        style="@style/etSolidRoundedOutline_1" />
                    <Button
                        android:id="@+id/updateGraph"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:layout_marginEnd="@dimen/_16pxh"
                        android:layout_marginStart="@dimen/_8pxh"
                        android:layout_marginTop="@dimen/_24pxv"
                        android:drawableStart="@drawable/img_ticket"
                        android:gravity="center_vertical"/>


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearRowsort"
                style="@style/groupStylewhite_A700"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8pxv"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerDropdownTransa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_marginBottom="@dimen/_12pxv"
                    android:layout_weight="0.77"
                    tools:listitem="@layout/spinner_item" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSort"
                    style="@style/btnRoundedOutline"
                    android:layout_width="@dimen/_40pxh"
                    android:layout_height="@dimen/_40pxh"
                    android:layout_marginStart="@dimen/_172pxh"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginBottom="@dimen/_12pxv"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_8pxh"
                    android:paddingVertical="@dimen/_8pxv"
                    android:singleLine="true"
                    android:textAllCaps="false" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerTransactions"
                itemSpace="@{@dimen/_8pxh}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginEnd="@dimen/_16pxh"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/row_transaction" />
        </LinearLayout>
    </LinearLayout>
</layout>
