<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="accountsRowModel"
            type="com.tva.cashcoach.modules.wallets.data.model.WalletsRowModel" />
    </data>

    <LinearLayout
        android:id="@+id/linearRowprice"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        style="@style/groupStylewhite_1">

        <LinearLayout
            android:id="@+id/linearRoweye"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_12pxv"
            android:layout_marginBottom="@dimen/_16pxv"
            android:layout_weight="0.72"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnEye"
                android:layout_width="@dimen/_48pxh"
                android:layout_height="@dimen/_48pxh"
                android:layout_marginTop="@dimen/_2pxh"
                android:background="@drawable/rectangle_bg_black_900_radius_16"
                android:paddingHorizontal="@dimen/_12pxh"
                android:paddingVertical="@dimen/_12pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_eye_white_a700"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txtWalletName"
                style="@style/txtIntersemibold18_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5pxv"
                android:layout_marginTop="@dimen/_14pxv"
                android:layout_marginBottom="@dimen/_12pxv"
                android:layout_weight="0.4"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                tools:text="@string/lbl_main_wallet" />

            <TextView
                android:id="@+id/txtWalletBalance"
                style="@style/txtIntersemibold18"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14pxh"
                android:layout_weight="0.28"
                android:ellipsize="end"
                android:paddingStart="@dimen/_10pxh"
                android:paddingEnd="@dimen/_10pxh"
                android:singleLine="true"
                android:text=""
                tools:text="@string/lbl_1_200" />

            <RadioButton
                android:id="@+id/radioDefaultWallet"
                app:buttonTint="@color/black"
                style="@style/txtSolid_1"
                android:layout_marginTop="@dimen/_13pxh"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_width="@dimen/_25pxh"
                android:layout_height="@dimen/_25pxh"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:singleLine="true"
                android:tooltipText="@string/make_this_your_default_wallet"
                android:text=""
                tools:text="" />
        </LinearLayout>
    </LinearLayout>
</layout>
