<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="settingsLanguageVM"
            type="com.tva.cashcoach.modules.settingslanguage.data.viewmodel.SettingsLanguageVM" />
    </data>

    <LinearLayout
        android:gravity="start"
        android:id="@+id/linearSettingsLangua"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/groupStylewhite_A700">

        <LinearLayout
            android:gravity="center_horizontal"
            android:id="@+id/linearTopNavigation"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            style="@style/groupStylewhite_2">

            <androidx.appcompat.widget.Toolbar
                android:gravity="start"
                android:id="@+id/toolbarToolbar"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_18pxv"
                android:layout_marginEnd="@dimen/_20pxh"
                android:layout_marginStart="@dimen/_20pxh"
                android:layout_marginTop="@dimen/_23pxv"
                android:layout_width="match_parent"
                app:contentInsetStart="0dp">

                <LinearLayout
                    android:id="@+id/linearRowarrowleft"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageBack"
                        android:layout_height="@dimen/_16pxh"
                        android:layout_marginBottom="@dimen/_5pxv"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_width="@dimen/_24pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_arrowleft"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_arrowleft" />

                    <TextView
                        android:ellipsize="end"
                        android:id="@+id/txtTitle"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_100pxh"
                        android:layout_weight="0.78"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:text="@{settingsLanguageVM.settingsLanguageModel.txtTitle}"
                        style="@style/txtIntersemibold18_2"
                        tools:text="@string/lbl_language" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/_15pxv">

            <RadioButton
                android:id="@+id/txtLanguageSlo"
                android:layout_width="match_parent"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:paddingBottom="@dimen/_17pxv"
                android:paddingStart="@dimen/_16pxh"
                android:paddingTop="@dimen/_17pxv"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{settingsLanguageVM.settingsLanguageModel.txtLanguageSlo}"
                style="@style/txtSolid_1"
                tools:text="@string/lbl_slovenian_slo" />

            <RadioButton
                android:id="@+id/txtLanguageEn"
                android:layout_width="match_parent"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:paddingBottom="@dimen/_17pxv"
                android:paddingStart="@dimen/_16pxh"
                android:paddingTop="@dimen/_17pxv"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{settingsLanguageVM.settingsLanguageModel.txtLanguageEn}"
                style="@style/txtSolid_1"
                tools:text="@string/lbl_english_en" />

            <RadioButton
                android:id="@+id/txtLanguageDe"
                android:layout_width="match_parent"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:paddingBottom="@dimen/_17pxv"
                android:paddingStart="@dimen/_16pxh"
                android:paddingTop="@dimen/_17pxv"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{settingsLanguageVM.settingsLanguageModel.txtLanguageDe}"
                style="@style/txtSolid_1"
                tools:text="@string/lbl_german_de" />
        </RadioGroup>
    </LinearLayout>
</layout>
