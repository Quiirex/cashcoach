<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="homeScreenContainerVM"
            type="com.tva.cashcoach.modules.homescreencontainer.data.viewmodel.HomeScreenContainerVM" />
    </data>

    <LinearLayout
        android:id="@+id/linearHomescreen"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_12pxv"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/groupStylewhite_A700">

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="match_parent" />

        <FrameLayout
            android:gravity="bottom|start"
            android:id="@+id/frameBottombar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <FrameLayout
                android:id="@+id/frameStacksubtract"
                android:layout_height="@dimen/_70pxv"
                android:layout_width="match_parent">

                <ImageView
                    android:id="@+id/imageSubtract"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_70pxh"
                    android:layout_width="@dimen/_375pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_subtract"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_subtract" />

                <LinearLayout
                    android:id="@+id/linearRowhome"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linearHome"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_marginTop="@dimen/_12pxv"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageHome"
                            android:layout_gravity="center"
                            android:layout_height="@dimen/_23pxh"
                            android:layout_width="@dimen/_23pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_home"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_home" />

                        <TextView
                            android:ellipsize="end"
                            android:gravity="center_horizontal"
                            android:id="@+id/txtHomeOne"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_2pxh"
                            android:layout_marginStart="@dimen/_2pxh"
                            android:layout_marginTop="@dimen/_7pxv"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:text="@{homeScreenContainerVM.homeScreenContainerModel.txtHomeOne}"
                            style="@style/txtIntermedium10"
                            tools:text="@string/lbl_home" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearTransaction"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_marginTop="@dimen/_13pxv"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageTicketOne"
                            android:layout_gravity="center"
                            android:layout_height="@dimen/_21pxh"
                            android:layout_width="@dimen/_27pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_ticket_gray_400"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_ticket_gray_400" />

                        <TextView
                            android:ellipsize="end"
                            android:gravity="center_horizontal"
                            android:id="@+id/txtTransaction"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_2pxh"
                            android:layout_marginStart="@dimen/_2pxh"
                            android:layout_marginTop="@dimen/_8pxv"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:text="@{homeScreenContainerVM.homeScreenContainerModel.txtTransaction}"
                            style="@style/txtIntermedium10_1"
                            tools:text="@string/lbl_transaction" />
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/frameAdd"
                        android:layout_height="@dimen/_56pxv"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_width="@dimen/_56pxh"
                        style="@style/groupStyleblack_900cornerRadius">

                        <ImageView
                            android:id="@+id/imagePlus"
                            android:layout_gravity="center"
                            android:layout_height="@dimen/_26pxh"
                            android:layout_marginBottom="@dimen/_14pxv"
                            android:layout_marginTop="@dimen/_15pxv"
                            android:layout_width="@dimen/_26pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_plus"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_plus" />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/linearBudget"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12pxv"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imagePieChart"
                            android:layout_gravity="center"
                            android:layout_height="@dimen/_23pxh"
                            android:layout_width="@dimen/_23pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_piechart"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_piechart" />

                        <TextView
                            android:ellipsize="end"
                            android:gravity="center_horizontal"
                            android:id="@+id/txtReport"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_2pxh"
                            android:layout_marginStart="@dimen/_2pxh"
                            android:layout_marginTop="@dimen/_8pxv"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:text="@{homeScreenContainerVM.homeScreenContainerModel.txtReport}"
                            style="@style/txtIntermedium10_1"
                            tools:text="@string/lbl_report" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearProfile"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_marginTop="@dimen/_12pxv"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageUser"
                            android:layout_gravity="center"
                            android:layout_height="@dimen/_23pxh"
                            android:layout_width="@dimen/_20pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_user"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_user" />

                        <TextView
                            android:ellipsize="end"
                            android:gravity="center_horizontal"
                            android:id="@+id/txtProfile"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_2pxh"
                            android:layout_marginStart="@dimen/_2pxh"
                            android:layout_marginTop="@dimen/_7pxv"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:text="@{homeScreenContainerVM.homeScreenContainerModel.txtProfile}"
                            style="@style/txtIntermedium10_1"
                            tools:text="@string/lbl_profile" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</layout>
