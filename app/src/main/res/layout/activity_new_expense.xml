<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="newExpenseVM"
            type="com.tva.cashcoach.modules.newexpense.data.viewmodel.NewExpenseVM" />
    </data>

    <LinearLayout
        android:id="@+id/linearColumnarrowleft"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_23pxv"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/groupStylewhite_A700">

        <androidx.appcompat.widget.Toolbar
            android:gravity="start"
            android:id="@+id/toolbarToolbar"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20pxh"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_width="match_parent"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:id="@+id/linearRowarrowleft"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageBack"
                    android:layout_height="@dimen/_16pxh"
                    android:layout_marginBottom="@dimen/_5pxv"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_width="@dimen/_24pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrowleft"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_arrowleft" />

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/txtTitle"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_106pxh"
                    android:layout_weight="0.76"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:text="@{newExpenseVM.newExpenseModel.txtTitle}"
                    style="@style/txtIntersemibold18_3"
                    tools:text="@string/lbl_expense" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:clipToPadding="false"
            android:fillViewport="true"
            android:gravity="start"
            android:id="@+id/scrollViewScrollview"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_78pxv"
            android:layout_weight="1"
            android:layout_width="match_parent">

            <LinearLayout
                android:gravity="start"
                android:id="@+id/linearNewExpense"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="start"
                    android:id="@+id/linearColumnhowmuch"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    style="@style/groupStylered_A200">

                    <TextView
                        android:ellipsize="end"
                        android:id="@+id/txtHowmuch"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_26pxh"
                        android:layout_marginStart="@dimen/_26pxh"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{newExpenseVM.newExpenseModel.txtHowmuch}"
                        style="@style/txtIntersemibold18_4"
                        tools:text="@string/lbl_how_much" />

                    <FrameLayout
                        android:id="@+id/frameStacktwo"
                        android:layout_height="@dimen/_78pxv"
                        android:layout_marginEnd="@dimen/_25pxh"
                        android:layout_marginStart="@dimen/_25pxh"
                        android:layout_marginTop="@dimen/_12pxv"
                        android:layout_width="@dimen/_86pxh">

                        <TextView
                            android:ellipsize="end"
                            android:gravity="top|start"
                            android:id="@+id/txtTwo"
                            android:layout_gravity="end"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:layout_marginStart="@dimen/_10pxh"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:text="@{newExpenseVM.newExpenseModel.txtTwo}"
                            style="@style/txtIntersemibold64_1"
                            tools:text="@string/lbl" />

                        <EditText
                            android:background="@android:color/transparent"
                            android:ellipsize="end"
                            android:hint="@string/lbl_0"
                            android:id="@+id/etZero"
                            android:inputType="text"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10pxh"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:text="@={newExpenseVM.newExpenseModel.etZeroValue}"
                            android:textColorHint="@color/black_900"
                            style="@style/etIntersemibold64"
                            tools:ignore="Autofill" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/frameStackinputdescripti"
                        android:layout_height="@dimen/_392pxv"
                        android:layout_marginTop="@dimen/_140pxv"
                        android:layout_width="match_parent">

                        <LinearLayout
                            android:id="@+id/linearColumninputdescripti"
                            android:layout_gravity="top|start"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_10pxv"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            style="@style/groupStylewhite_A700cornerRadius">

                            <Spinner
                                android:background="@drawable/layer_list_bg_white_a700_border_gray_100_radius_16"
                                android:gravity="center_horizontal"
                                android:id="@+id/spinnerDropdownCatego"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_16pxh"
                                android:layout_marginStart="@dimen/_16pxh"
                                android:layout_marginTop="@dimen/_24pxv"
                                android:layout_width="match_parent"
                                tools:listitem="@layout/spinner_item" />

                            <EditText
                                android:background="@drawable/rectangle_bg_white_a700_border_gray_100_radius_16"
                                android:ellipsize="end"
                                android:hint="@string/lbl_description"
                                android:id="@+id/etInputDescripti"
                                android:inputType="text"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_16pxh"
                                android:layout_marginStart="@dimen/_16pxh"
                                android:layout_marginTop="@dimen/_16pxv"
                                android:layout_width="match_parent"
                                android:lineSpacingExtra="@dimen/_4pxh"
                                android:paddingBottom="@dimen/_16pxv"
                                android:paddingEnd="@dimen/_30pxh"
                                android:paddingStart="@dimen/_16pxh"
                                android:paddingTop="@dimen/_19pxv"
                                android:singleLine="true"
                                android:text="@={newExpenseVM.newExpenseModel.etInputDescriptiValue}"
                                android:textColorHint="@color/gray_500"
                                style="@style/etSolidRoundedOutline"
                                tools:ignore="Autofill" />

                            <Spinner
                                android:background="@drawable/layer_list_bg_white_a700_border_gray_100_radius_16"
                                android:gravity="center_horizontal"
                                android:id="@+id/spinnerDropdownWallet"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_16pxh"
                                android:layout_marginStart="@dimen/_16pxh"
                                android:layout_marginTop="@dimen/_16pxv"
                                android:layout_width="match_parent"
                                tools:listitem="@layout/spinner_item" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:ellipsize="end"
                                android:gravity="center"
                                android:id="@+id/btnRowairplane"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_24pxv"
                                android:layout_marginEnd="@dimen/_16pxh"
                                android:layout_marginStart="@dimen/_16pxh"
                                android:layout_marginTop="@dimen/_16pxv"
                                android:layout_width="match_parent"
                                android:singleLine="true"
                                android:textAllCaps="false"
                                style="@style/btnSolidRoundedOutline" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearColumncontinue"
                            android:layout_gravity="bottom|start"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10pxv"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            style="@style/groupStylewhite_A700">

                            <androidx.appcompat.widget.AppCompatButton
                                android:ellipsize="end"
                                android:gravity="center"
                                android:id="@+id/btnContinue"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/_16pxh"
                                android:layout_marginVertical="@dimen/_16pxv"
                                android:layout_width="match_parent"
                                android:paddingBottom="@dimen/_17pxv"
                                android:paddingEnd="@dimen/_30pxh"
                                android:paddingStart="@dimen/_30pxh"
                                android:paddingTop="@dimen/_17pxv"
                                android:singleLine="true"
                                android:text="@string/lbl_continue"
                                android:textAllCaps="false"
                                style="@style/btnSolidRounded_3"
                                tools:text="@string/lbl_continue" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/frameStackwriteadescrip"
                    android:layout_height="@dimen/_451pxv"
                    android:layout_marginTop="@dimen/_513pxv"
                    android:layout_width="match_parent"
                    style="@style/groupStylewhite_A700cornerRadius">

                    <TextView
                        android:ellipsize="end"
                        android:id="@+id/txtWriteadescrip"
                        android:layout_gravity="top|start"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_123pxv"
                        android:layout_marginEnd="@dimen/_80pxh"
                        android:layout_marginStart="@dimen/_80pxh"
                        android:layout_marginTop="@dimen/_123pxv"
                        android:layout_width="wrap_content"
                        android:lineSpacingExtra="@dimen/_2pxh"
                        android:singleLine="true"
                        android:text="@{newExpenseVM.newExpenseModel.txtWriteadescrip}"
                        style="@style/txtIntermedium16_2"
                        tools:text="@string/msg_write_a_descrip" />

                    <FrameLayout
                        android:id="@+id/frameStackinfo"
                        android:layout_gravity="top|center"
                        android:layout_height="@dimen/_56pxv"
                        android:layout_marginBottom="@dimen/_20pxv"
                        android:layout_marginEnd="@dimen/_16pxh"
                        android:layout_marginStart="@dimen/_16pxh"
                        android:layout_marginTop="@dimen/_104pxv"
                        android:layout_width="@dimen/_343pxh"
                        style="@style/groupStylecornerRadius_2">

                        <ImageView
                            android:id="@+id/imageInfo"
                            android:layout_gravity="start"
                            android:layout_height="@dimen/_24pxh"
                            android:layout_marginBottom="@dimen/_16pxv"
                            android:layout_marginEnd="@dimen/_20pxh"
                            android:layout_marginStart="@dimen/_20pxh"
                            android:layout_marginTop="@dimen/_16pxv"
                            android:layout_width="@dimen/_24pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_info"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_info" />
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
